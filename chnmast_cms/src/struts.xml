<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE struts PUBLIC    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"    "http://struts.apache.org/dtds/struts-2.3.dtd"><struts>	<!-- 最顶级包 -->	<package name="default-package" extends="struts-default">		<result-types>			<!-- freemarker设置为默认的视图 -->			<result-type name="freemarker" class="org.apache.struts2.views.freemarker.FreemarkerResult" default="true"/>		</result-types>				<interceptors>			<!-- 平台安全性拦截器；必须放在params和validation系统过滤器之间 ，否则可能在响应页面取不到值或者引起基于DOM的跨站点脚本编制问题 -->			<interceptor name="security" class="net.zdsoft.common.interceptor.SecurityInterceptor"/>						<interceptor-stack name="chnmasterCmsDefaultStack">        		<interceptor-ref name="exception">                    <param name="logEnabled">true</param>                    <param name="logLevel">error</param>                             </interceptor-ref>                <interceptor-ref name="alias"/>                <interceptor-ref name="servletConfig"/>                <interceptor-ref name="prepare"/>                <interceptor-ref name="i18n"/>                <interceptor-ref name="chain"/>                <interceptor-ref name="debugging"/>                <interceptor-ref name="modelDriven"/>                <interceptor-ref name="fileUpload"/>                <interceptor-ref name="staticParams"/>                <interceptor-ref name="params"/>                <interceptor-ref name="conversionError"/>                <interceptor-ref name="security"/>                <interceptor-ref name="validation">                    <param name="excludeMethods">input,back,cancel,browse</param>                </interceptor-ref>                <interceptor-ref name="workflow">                    <param name="excludeMethods">input,back,cancel,browse</param>                </interceptor-ref>			</interceptor-stack>		</interceptors>		<default-interceptor-ref name="chnmasterCmsDefaultStack" />				<global-results>			<result name="index" type="redirect">/index.htm</result>			<result name="login" type="redirect">/login.htm</result>			<result name="error" type="redirect">/error.htm</result>			<result name="exception" type="redirect">/error.htm</result>			<result name="noprivacy" type="redirect">/noprivacy.htm</result>			<result name="notexist" type="redirect">/notexist.htm</result>			<result name="subError">/pages/common/submitError.ftl</result>		</global-results>				<global-exception-mappings>			<exception-mapping exception="java.lang.Throwable" result="exception" />			<exception-mapping exception="net.zdsoft.chnmaster.exception.NoPrivacyException" result="noprivacy" />		</global-exception-mappings>				<action name="error" class="errorAction" method="error">			<result name="success">/pages/common/exception.ftl</result>		</action>		<action name="exception" class="errorAction" method="exception">			<result name="success">/pages/common/exception.ftl</result>		</action>		<action name="noprivacy" class="errorAction" method="noprivacy">			<result name="success">/pages/common/noprivacy.ftl</result>		</action>		<action name="notexist" class="errorAction" method="notexist">			<result name="success">/pages/common/notexist.ftl</result>		</action>	</package>    	<package name="login-package" extends="default-package">		<interceptors>			<interceptor name="userLogin" class="net.zdsoft.chnmaster.interceptor.UserIsLoginInterceptor" />			<interceptor-stack name="isLoginStack">				<interceptor-ref name="chnmasterCmsDefaultStack"/>				<interceptor-ref name="userLogin"/>			</interceptor-stack>		</interceptors>		<default-interceptor-ref name="isLoginStack"/>	</package></struts>