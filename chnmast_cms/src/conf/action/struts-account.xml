<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- 业务处理 -->
<struts>
    <!-- 支付处理 -->
    <package name="account-payDeal" namespace="/account" extends="login-package">
        <action name="payDeal" class="payDealAction" method="payDeal">
            <result name="success">/pages/account/payDeal/payDeal.ftl</result>
        </action>
        <action name="payDeal-cashpay" class="payDealAction" method="cashpay">
            <result name="success">/pages/account/payDeal/payDeal-cashpay.ftl</result>
        </action>
        <action name="doPayDeal" class="payDealAction" method="doPayDeal"/>
    </package>
    
    <!-- 票务验证 -->
    <package name="account-codeDeal" namespace="/account" extends="login-package" >
        <action name="codeDeal" class="codeDealAction" method="verifyCodeQuery">
            <result>/pages/account/codeDeal/codeDeal.ftl</result>
        </action>
        <action name="verifyCodeQuickQuery" class="codeDealAction" method="verifyCodeQuickQuery">
            <result>/pages/account/codeDeal/codeDetail.ftl</result>
        </action>
        <action name="updateVerifyCode" class="codeDealAction" method="updateVerifyCode">
        </action>
    </package>
    
    <!-- 订单优惠 -->
    <package name="account-orderAnnul" namespace="/account" extends="login-package" >
        <action name="orderAnnul" class="orderAnnulAction" method="orderAnnul">
            <result>/pages/account/orderAnnul/orderAnnul.ftl</result>
        </action>
        <!-- 查看优惠 -->
        <action name="viewAnnul" class="orderAnnulAction" method="viewAnnul">
            <result>/pages/account/orderAnnul/viewAnnul.ftl</result>
        </action>
        <!-- 验证能否操作 -->
        <action name="isCanOperateAnnul" class="orderAnnulAction" method="isCanOperateAnnul" />
        <!-- 添加优惠 -->
        <action name="addAnnul" class="orderAnnulAction" method="addAnnul">
            <result name="input">/pages/account/orderAnnul/addAnnul.ftl</result>
        </action>
        <!-- 取消优惠 -->
        <action name="cancelAnnul" class="orderAnnulAction" method="cancelAnnul" />
    </package>
    
    <!-- 选课报名 -->
    <package name="account-stuReport" namespace="/account" extends="login-package" >
        <!-- 按学员报名 -->
        <action name="stuReport" class="stuReportAction" method="stuReport">
            <result name="success" >/pages/account/report/stuReport.ftl</result>
        </action>
        <!-- 验证课程 -->
        <action name="valCourse" class="stuReportAction" method="valCourse"/>
        <!-- 按学员报名-提交 -->
        <action name="stuReportSave" class="stuReportAction" method="stuReportSave"/>
        
        <!-- 按课程报名 -->
        <action name="courseReport" class="stuReportAction" method="courseReport">
            <result name="success" >/pages/account/report/courseReport.ftl</result>
        </action>
         <!-- 验证学员 -->
        <action name="valStudent" class="stuReportAction" method="valStudent"/>
         <!-- 按课程报名-提交 -->
        <action name="courseReportSave" class="stuReportAction" method="courseReportSave"/>
         <!-- 导入学员报名-提交 -->
        <action name="importStuReport" class="stuReportAction" method="importStuReport"/>
        <!-- 导入结果查看 -->
        <action name="viewResultStuReport" class="stuReportAction" method="viewResultStuReport"/>
    </package>
    
    <!-- 优惠券管理 -->
    <package name="account-coupon" namespace="/account" extends="login-package">
        <!-- 优惠券信息  -->
        <action name="couponManage" class="couponManageAction" method="couponManage">
            <result name="success" >/pages/account/coupon/couponManage.ftl</result>
        </action>
        <!-- 新增 -->
        <action name="addCoupon" class="couponManageAction" method="editCoupon">
            <result name="success" >/pages/account/coupon/editCoupon.ftl</result>
        </action>
        <!-- 修改  -->
        <action name="editCoupon" class="couponManageAction" method="editCoupon">
            <result name="success">/pages/account/coupon/editCoupon.ftl</result>
        </action>
        <!-- 删除  -->
        <action name="deleteCoupon" class="couponManageAction" method="deleteCoupon" />
        <!-- 导出功能 -->
        <action name="exportCoupon" class="couponManageAction" method="exportCoupon" />
        <!-- 注销功能 -->
        <action name="cancelCoupon" class="couponManageAction" method="cancelCoupon" />
        
        <!-- 保存优惠券 信息 -->
        <action name="saveCoupon" class="couponManageAction" method="saveCoupon" />
        <!-- 批量删除优惠券 -->
        <action name="batchDeleteCoupon" class="couponManageAction" method="batchDeleteCoupon" />
        <!-- 批量注销优惠券 -->
        <action name="batchCancelCoupon" class="couponManageAction" method="batchCancelCoupon" />
        <!-- 根据批次号自动生成优惠券号  -->
        <action name="autoGenerateCouponCode" class="couponManageAction" method="autoGenerateCouponCode" />
        
        <!-- 绑定课程DIV-已绑定（右边） -->
        <action name="gainCourseBinded" class="couponManageAction" method="gainCourseBinded" />
        <!-- 绑定课程DIV-未绑定（左边） -->
        <action name="gainCourseNoBind" class="couponManageAction" method="gainCourseNoBind" />
    </package>
    
    <!-- hifi会员业务处理 -->
    <package name="account-hifi" namespace="/account" extends="login-package">
        <action name="hifiMemberManage" class="hifiMemberManageAction" method="hifiMemberManage">
            <result name="success">/pages/account/hifi/hifiMemberManage.ftl</result>
        </action>
        <action name="hifiMemberOrder" class="hifiMemberManageAction" method="hifiMemberOrder">
            <result name="success">/pages/account/hifi/hifiMemberOrder.ftl</result>
        </action>
    </package>
</struts>