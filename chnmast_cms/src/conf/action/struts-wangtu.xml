<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="appUserAction" namespace="/appUser" extends="struts-default" >
        <!-- 登录 -->
        <action name="userLogin" class="appUserAction" method="userLogin">
        </action>
        <!-- 注册 -->
        <action name="userRegister" class="appUserAction" method="userRegister">
        </action>
        <!-- 退出 -->
        <action name="logout" class="appUserAction" method="logout">
        </action>
        <!-- 修改头像 -->
        <action name="changeAvatar" class="appUserAction" method="changeAvatar">
        </action>
        <!-- 更新用户信息 -->
        <action name="updateUserInfo" class="appUserAction" method="updateUserInfo">
        </action>
        <!-- 获取用户信息 -->
        <action name="getUserInfo" class="appUserAction" method="getUserInfo">
        </action>
        <!-- 获取评论用户信息 -->
        <action name="getCommentUserInfo" class="appUserAction" method="getCommentUserInfo">
        </action>
        <!-- 获取评论 -->
        <action name="getUserComments" class="appUserAction" method="getUserComments">
        </action>
        <!-- 回复评论 -->
        <action name="replyComment" class="appUserAction" method="replyComment">
        </action>
        <!-- 新增评论 -->
        <action name="addComment" class="appUserAction" method="addComment">
        </action>
         <!-- 账户信息 -->
        <action name="account" class="appUserAction" method="account">
        </action>
        <!-- 提现 -->
        <action name="accountApply" class="appUserAction" method="accountApply">
        </action>
    </package>
    <package name="appSmsAction" namespace="/appSms" extends="struts-default" >
    	<!-- 手机配置信息-->
        <action name="mobileConfig" class="appSmsAction" method="mobileConfig" />
        <!-- 更新消息推送状态-->
        <action name="updatePushStatus" class="appSmsAction" method="updatePushStatus" />
        <!-- 消息列表-->
        <action name="pushMsgList" class="appSmsAction" method="pushMsgList" />
    </package>
    <package name="appRewardAction" namespace="/appReward" extends="struts-default" >
        <!-- 悬赏列表 -->
        <action name="listReward" class="appRewardAction" method="listReward">
        </action>
        <!-- 悬赏详情 -->
        <action name="rewardDetail" class="appRewardAction" method="rewardDetail">
        </action>
        <!-- 竞价详情 -->
        <action name="biddingDetail" class="appRewardAction" method="biddingDetail">
        </action>
        <!-- 分类列表 -->
        <action name="listCatalogs" class="appRewardAction" method="listCatalogs">
        </action>
        <!-- 新增竞价-->
        <action name="addRewardBidding" class="appRewardAction" method="addRewardBidding">
        </action>
        <!-- 删除竞价-->
        <action name="delRewardBidding" class="appRewardAction" method="delRewardBidding">
        </action>
        <!-- 我的悬赏-->
        <action name="myReward" class="appRewardAction" method="myReward">
        </action>
        <!-- 我竞价的悬赏-->
        <action name="myRewardBidding" class="appRewardAction" method="myRewardBidding">
        </action>
        <!-- 新增悬赏-->
        <action name="addReward" class="appRewardAction" method="addReward">
        </action>
        <!-- 更新悬赏-->
        <action name="updateReward" class="appRewardAction" method="updateReward">
        </action>
        <!-- 删除悬赏-->
        <action name="deleteReward" class="appRewardAction" method="deleteReward">
        </action>
        <!-- 撤销悬赏-->
        <action name="cancelReward" class="appRewardAction" method="cancelReward">
        </action>
        <!-- 任务完成-->
        <action name="rewardFinish" class="appRewardAction" method="rewardFinish">
        </action>
        <!-- 取消竞价-->
        <action name="cancelBidding" class="appRewardAction" method="cancelBidding">
        </action>
        <!-- 选择竞价人-->
        <action name="chooseBidding" class="appRewardAction" method="chooseBidding">
        </action>
        <!-- 创建订单-->
        <action name="createBiddingOrder" class="appRewardAction" method="createBiddingOrder">
        </action>
        <!-- 完成订单-->
        <action name="finishBiddingOrder" class="appRewardAction" method="finishBiddingOrder">
        </action>
        
    </package>

</struts>